{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.Iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "allowJs": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/main/test/cypress"
    ]
}